<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!-- 是否启用开发模式 -->
    <constant name="struts.devMode" value="true" />
    <!-- 设置在class被修改时是否热加载，发布时要设置为false -->
    <constant name="struts.convention.classes.reload" value="true" />
    <constant name="struts.convention.exclude.parentClassLoader" value="false" />
    <!-- 所有匹配*.action的请求都由struts2处理 -->
    <constant name="struts.action.extension" value="action" />
    <!--设置struts2默认的locale，决定使用哪个资源文件-->
    <constant name="struts.locale" value="de_DE"/>
    <!-- 是否自动加载国际化资源文件  -->
    <constant name="struts.i18n.reload" value="true"/>
    <!--（默认false）设置是否总是以自动装配策略创建对象-->
    <constant name="struts.objectFactory.spring.autoWire.alwaysRespect" value="true" />
    <!-- 让struts2支持动态方法调用 -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!--Struts2默认临时文件存储位置-->
    <constant name="struts.multipart.saveDir" value="/tmp"/>
    <!--请求参数的编码方式 -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>

    <package name="cn" namespace="/" extends="struts-default,json-default">

        <action name="saveAction" class="saveAction" method="save">
            <!-- 返回类型为json-->
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <action name="redrawAction" class="redrawAction" method="redraw">
            <!-- 返回类型为json-->
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

    </package>

</struts>